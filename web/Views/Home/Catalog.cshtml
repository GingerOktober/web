@using webnet.Models
@{
	ViewBag.Title = "РИВ ГОШ - Магазин парфюмерии и косметики";
	Layout = "/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Goods>
<!DOCTYPE html>
	<html lang="ru">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" type="text/css" href="/css/site.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		<title>РИВ ГОШ - Магазин парфюмерии и косметики</title>
	</head>
	<body>
	@{
		var someVariable = 0;
	}
    <td class="catalog">
        <div class="cards">
            @foreach (var product in Model)
            {
                <div class="card" data-toggle="modal" data-target="#productModal-@product.GoodId" data-goodid="@product.GoodId">
                    <div class="card__top">
                        <a class="card__image">
                            <img src="@Url.Content(product.GoodImage)" />
                        </a>
                        <p class="card__label">@product.GoodDiscount%</p>
                    </div>
                    <div class="card__bottom">
                        <div class="card__prices">
                            <p>Со скидкой:</p>
                            <p class="cardprice cardprice--discount">@product.GoodPrice</p>
                            <p>Обычная цена:</p>
                            <s class="cardprice cardprice--common">@product.GoodOldPrice</s>
                        </div>
                        <a class="card__title" style="text-align: center; display: block;">@product.GoodName</a>
                        <form>
                            <button type="button" class="card__add addToCartButton">В корзину</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </td>

	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
		<script src="~/js/catalog.js"></script>
	</body>
</html>
