@using webnet.Models
@{
	ViewBag.Title = "РИВ ГОШ - Магазин парфюмерии и косметики";
	Layout = "/Views/Shared/_Layout.cshtml";
}

@model Users
@using (Html.BeginForm("Registration", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
}
<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="~/css/site.css">
	<title> @ViewBag.Title </title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
	<td class="boxr">
		<h2 style="text-align: center;">Зарегистрироваться</h2>
		<p>Ваше имя:</p>
		@Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
		@Html.ValidationMessageFor(m => m.Name)
		<p>Электронная почта:</p>
		@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Email)
		<p>Дата рождения:</p>
		<input type="date" id="start" name="BirthDate" value="2010-01-31" min="1666-01-01" max="2011-01-01">
		<p>Создайте себе пароль:</p>
		<div class="password">
			@Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password", id = "password-input-1" })
			
			<label>
				<input type="checkbox" onclick="togglePasswordVisibility('password-input-1')"> Показать пароль
			</label>
			@Html.ValidationMessageFor(m => m.Password)
		</div>
		<p>Повторите пароль:</p>
		<div class="password">
			@Html.TextBoxFor(m => m.confirmPassword, new { @class = "form-control", type = "password", id = "password-input-2" })
		
			<label>
				<input type="checkbox" onclick="togglePasswordVisibility('password-input-2')"> Показать пароль
			</label>
			@Html.ValidationMessageFor(m => m.confirmPassword)
			<br />
		</div>
		</br>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<button type="submit" class="btn btn-default">Зарегистрироваться</button>
			</div>
		</div>
		<p>Уже с нами? <a href="/Home/Login">Войти в аккаунт</a></p>
	</td>
	<script>
		function togglePasswordVisibility(inputId) {
			var input = document.getElementById(inputId);
			if (input.type === "password") {
				input.type = "text";
			} else {
				input.type = "password";
			}
		}
	</script>
</body>
</html>